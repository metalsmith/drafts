{
  "name": "@metalsmith/drafts",
  "version": "1.2.0",
  "description": "A metalsmith plugin to hide drafts.",
  "keywords": [
    "drafts",
    "metalsmith",
    "metalsmith-plugin",
    "static-site"
  ],
  "homepage": "https://github.com/metalsmith/drafts#readme",
  "bugs": {
    "url": "https://github.com/metalsmith/drafts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/metalsmith/drafts.git"
  },
  "license": "MIT",
  "author": "Ian Storm Taylor (https://ianstormtaylor.com)",
  "contributors": [
    "Kevin Van Lierde (https://webketje.com)",
    "Werner Glinka",
    "Andrew Goodricke",
    "Stefan Walther",
    "Ian Storm Taylor",
    "Bret Fisher"
  ],
  "maintainers": [
    "Kevin Van Lierde (https://webketje.com)"
  ],
  "source": "src/index.js",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "type": "module",
  "exports": {
    "import": "./lib/index.js",
    "require": "./lib/index.cjs"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "types": "lib/index.d.ts",
  "scripts": {
    "changelog": "auto-changelog -u --starting-version v1.1.1 --commit-limit false --ignore-commit-pattern '(dev|ci|chore|Release|Merge)'",
    "coverage": "nyc report --reporter=text-lcov > ./coverage.info",
    "format": "prettier --write \"**/*.{yml,md,js,json}\"",
    "format:check": "prettier --list-different \"**/*.{yml,md,js,json}\"",
    "lint": "eslint --fix .",
    "lint:check": "eslint --fix-dry-run .",
    "release": "release-it .",
    "build": "microbundle --target node --no-sourcemap -f cjs,esm --strict --types",
    "pretest": "npm run build",
    "test": "nyc mocha"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.1.0",
    "auto-changelog": "^2.4.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.1",
    "metalsmith": "^2.5.1",
    "microbundle": "^0.15.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.8.0",
    "release-it": "^15.5.0"
  },
  "peerDependencies": {
    "metalsmith": "^2.5.0"
  },
  "engines": {
    "node": ">=12"
  },
  "publishConfig": {
    "access": "public"
  }
}
